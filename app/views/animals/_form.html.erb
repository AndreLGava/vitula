<%= simple_form_for(@animal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :born %>
    <%= f.input :female %>
    <%= f.input :breed %>
    <%= f.association :lot %>
    <%= f.association :reproduction %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<br>
