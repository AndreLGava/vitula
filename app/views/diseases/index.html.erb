<% breadcrumb :diseases %>
<div class="page-header">
  <%= link_to new_disease_path, class: 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Disease.human_attribute_name(:diseases)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th>Vulgarname</th>
            <th>Cientificname</th>
            <th>Causes</th>
            <th>Description</th>
            <th>Symptoms</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @diseases) do |disease| %>
            <td><%= disease.vulgarname %></td>
            <td><%= disease.cientificname %></td>
            <td><%= disease.causes %></td>
            <td><%= disease.description %></td>
            <td><%= disease.symptoms %></td>
            <td>
          <%= link_to disease, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_disease_path(disease), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to disease, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @diseases %>
<br>
