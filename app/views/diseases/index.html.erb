<div class="page-header">
  <%= link_to new_disease_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Disease
  <% end %>
  <h1>Listing diseases</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Vulgarname</th>
            <th>Cientificname</th>
            <th>Causes</th>
            <th>Description</th>
            <th>Symptoms</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @diseases) do |disease| %>
            <td><%= disease.VulgarName %></td>
            <td><%= disease.CientificName %></td>
            <td><%= disease.Causes %></td>
            <td><%= disease.Description %></td>
            <td><%= disease.Symptoms %></td>
            <td><%= link_to 'Show', disease %></td>
        <td><%= link_to 'Edit', edit_disease_path(disease) %></td>
        <td><%= link_to 'Destroy', disease, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
