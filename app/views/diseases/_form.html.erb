    <%= f.label :CientificName, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :CientificName, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Causes, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :Causes, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :Description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :Symptoms, class: "col-sm-2 control-label" %>
