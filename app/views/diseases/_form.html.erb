<%= simple_form_for(@disease) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :vulgarname %>
    <%= f.input :cientificname %>
    <%= f.input :causes %>
    <%= f.input :description %>
    <%= f.input :symptoms %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
