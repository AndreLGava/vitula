<div class="page-header">
  <%= link_to diseases_path, class: 'btn btn-default' do %>
    <span class="fa fa-chevron-left"></span>
    <%= I18n.t('crud.back') %>
  <% end %>
  <%= link_to new_disease_path, class: 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('diseases.new.new') %>
  <% end %>
  <%# link_to edit_disease_path(@disease), class: 'btn btn-primary' do %>
    <!-- <span class="fa fa-pencil"></span> -->
    <%# I18n.t('crud.edit') %>
  <%# end %>
  <h3><%= I18n.t('crud.show') %> <%= Disease.human_attribute_name(:disease)%></h3>
</div>
<div class="col-xs-12">
  <ul class="list-group">
    <li class="list-group-item">
      <strong><%= Disease.human_attribute_name(:vulgarname)%></strong>
      <%= @disease.vulgarname %>
    </li>
    <li class="list-group-item">
      <strong><%= Disease.human_attribute_name(:cientificname)%></strong>
      <%= @disease.cientificname %>
    </li>
    <li class="list-group-item">
      <strong><%= Disease.human_attribute_name(:causes)%></strong>
      <%= @disease.causes %>
    </li>
    <li class="list-group-item">
      <strong><%= Disease.human_attribute_name(:description)%></strong>
      <%= @disease.description %>
    </li>
    <li class="list-group-item">
      <strong><%= Disease.human_attribute_name(:symptoms)%></strong>
      <%= @disease.symptoms %>
    </li>
  </ul>
</div>
