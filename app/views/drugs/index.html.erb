<% breadcrumb :drugs %>
<div class="page-header">
  <%= link_to new_drug_path, class: 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Drug.human_attribute_name(:drug)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th><%= Drug.human_attribute_name(:name)%></th>
            <th><%= Drug.human_attribute_name(:use)%></th>
            <th><%= Drug.human_attribute_name(:composition)%></th>
            <th><%= Drug.human_attribute_name(:indication)%></th>
            <th><%= Drug.human_attribute_name(:interaction)%></th>
            <th><%= Drug.human_attribute_name(:dosage)%></th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @drugs) do |drug| %>
            <td><%= drug.name %></td>
            <td><%= drug.use %></td>
            <td><%= drug.composition %></td>
            <td><%= drug.indication %></td>
            <td><%= drug.interaction %></td>
            <td><%= drug.dosage %></td>
            <td><%= link_to drug, class: "btn btn-sm btn-primary" do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
          </td>
          <td><%= link_to edit_drug_path(drug), class: "btn btn-sm btn-default" do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
          </td>
          <td><%= link_to drug,  method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: "btn btn-sm btn-danger" do %>
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>
          </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @drugs %>
<br>