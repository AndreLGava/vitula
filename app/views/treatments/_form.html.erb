<%= form_for(@treatment, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @treatment.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@treatment.errors.count, "error") %> prohibited this treatment from being saved:</h4>

      <ul>
      <% @treatment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :StartDate, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :StartDate, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :EndDate, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :EndDate, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :dosage, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :dosage, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :lack, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :lack, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :illness, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :illness, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
