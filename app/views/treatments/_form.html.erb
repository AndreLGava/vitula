<%= simple_form_for(@treatment, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :startdate, as: :date_picker %>
    <%= f.input :enddate, as: :date_picker %>
    <%= f.input :dosage, as: :normal, before: "ml", :input_html => {value: number_with_precision(f.object.dosage, precision: 2) } %>
    <%= f.input :lack, as: :normal, before: "Dias" %>
    <%= f.input :observation %>
    <%= f.association :illness, as: :hidden %>
    <%= f.association :drug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
