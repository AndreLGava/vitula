<%= simple_form_for(@treatment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :startdate, as: :date_picker %>
    <%= f.input :enddate, as: :date_picker %>
    <%= f.input :dosage %>
    <%= f.input :lack %>
    <%= f.input :observation %>
    <%= f.association :disease %>
    <%= f.association :drug %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
