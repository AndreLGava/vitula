<h3><%= Modulo.human_attribute_name(:modulo)%>s</h3>
<%= link_to  new_modulo_path, class: "btn btn-info pull-right" do %>
  <i class="fa fa-plus"></i> <%= I18n.t('crud.new') %>
<% end %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th><%= Modulo.human_attribute_name(:name)%></th>
      <th><%= Modulo.human_attribute_name(:description)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modulos.each do |modulo| %>
      <tr>
        <td><%= modulo.name %></td>
        <td><%= modulo.description %></td>
        <td><%= link_to modulo, class: "btn btn-sm btn-primary" do %>
          <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
        <% end %>
        </td>
        <td><%= link_to edit_modulo_path(modulo), class: "btn btn-sm btn-default" do %>
          <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
        <% end %>
        </td>
        <td><%= link_to modulo,  method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" do %>
          <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

