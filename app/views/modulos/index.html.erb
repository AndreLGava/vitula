<h3>Listing Modulos</h3>
<%= link_to 'New Modulo', new_modulo_path, class: "btn btn-info pull-right" %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @modulos.each do |modulo| %>
      <tr>
        <td><%= modulo.name %></td>
        <td><%= modulo.description %></td>
        <td><%= link_to 'Show', modulo, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_modulo_path(modulo), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Destroy', modulo, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

