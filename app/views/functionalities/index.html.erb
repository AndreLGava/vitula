<h3>Listing Functionalities</h3>
<%= link_to 'New Functionality', new_functionality_path, class: "btn btn-info pull-right" %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Modulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functionalities.each do |functionality| %>
      <tr>
        <td><%= functionality.name %></td>
        <td><%= functionality.description %></td>
        <td><%= functionality.modulo.name %></td>
        <td><%= link_to 'Show', functionality, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_functionality_path(functionality), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Destroy', functionality, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>


