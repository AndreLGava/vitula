<h3><%= I18n.t('functionalities.index.functionalities') %></h3>
<%= link_to  new_functionality_path, class: "btn btn-info pull-right" do %>
  <i class="fa fa-plus"></i> <%= I18n.t('crud.new') %>
<% end %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th><%= Functionality.human_attribute_name(:name)%></th>
      <th><%= Functionality.human_attribute_name(:description)%></th>
      <th><%= Functionality.human_attribute_name(:modulo)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @functionalities.each do |functionality| %>
      <tr>
        <td><%= functionality.name %></td>
        <td><%= functionality.description %></td>
        <td><%= functionality.modulo.name %></td>
        <td><%= link_to functionality, class: "btn btn-sm btn-primary" do %>
          <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
        <% end %>
        </td>
        <td><%= link_to edit_functionality_path(functionality), class: "btn btn-sm btn-default" do %>
          <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
        <% end %>
        </td>
        <td><%= link_to functionality,  method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: "btn btn-sm btn-danger" do %>
          <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


