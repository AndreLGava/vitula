<% breadcrumb :batches %>
<div class="page-header">
  <%= link_to new_batch_path, class: 'btn btn-primary pull-right' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Batch.human_attribute_name(:batches)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th>Name</th>
            <th>Observation</th>
            <th>Type</th>
            <th>Formation</th>
            <th>Glebe</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @batches) do |batch| %>
            <td><%= batch.name %></td>
            <td><%= batch.observation %></td>
            <td><%= batch.type %></td>
            <td><%= batch.formation %></td>
            <td><%= batch.glebe %></td>
            <td>
          <%= link_to batch, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_batch_path(batch), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to batch, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @batches %>
<br>
