<% breadcrumb :diets %>
<div class="page-header">
  <%= link_to new_diet_path, class: 'btn btn-primary pull-right' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Diet.human_attribute_name(:diets)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th><%= Diet.human_attribute_name(:amount)%></th>
            <th><%= Diet.human_attribute_name(:datestart)%></th>
            <th><%= Diet.human_attribute_name(:dateend)%></th>
            <th><%= Diet.human_attribute_name(:animal)%></th>
            <th><%= Diet.human_attribute_name(:stock)%></th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @diets) do |diet| %>
            <td><%= diet.amount %></td>
            <td><%= diet.datestart %></td>
            <td><%= diet.dateend %></td>
            <td><%= diet.animal %></td>
            <td><%= diet.stock %></td>
            <td>
          <%= link_to diet, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <% if diet.active? %>
            <%= link_to edit_diet_path(diet), class: 'btn btn-sm btn-default' do %>
              <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
            <% end %>
          <% end %>
        </td>
        <td>
          <%= link_to diet, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @diets %>
<br>
