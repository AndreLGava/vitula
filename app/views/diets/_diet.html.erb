<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
	<div class="page-header">
	  <%= link_to new_diet_path(animal_id: @animal.id), remote: true, class: 'btn btn-primary pull-right' do %>
	    <span class="fa fa-plus"></span>
	    <%= I18n.t('diets.new.new') %>
	  <% end %>
	  <h3><%= Diet.human_attribute_name(:diets)%></h3>
	</div>


	<div class="table-responsive">
	  <table class="table table-striped table-hover table-condensed">
	    <thead>
	      <tr>
	            <th><%= Diet.human_attribute_name(:amount)%></th>
	            <th><%= Diet.human_attribute_name(:datestart)%></th>
	            <th><%= Diet.human_attribute_name(:dateend)%></th>
	            <th><%= Diet.human_attribute_name(:feed)%></th>
	            <th></th>
	        <th></th>
	        <th></th>
	      </tr>
	    </thead>

	    <tbody>
	      <%= content_tag_for(:tr, @diets) do |diet| %>
	            <td><%= number_to_currency(diet.amount, unit: "Kg/Dia", separator: ",", delimiter: ".", format: "%n %u") %></td>
	            <td><%= diet.datestart %></td>
	            <td><%= diet.dateend %></td>
	            <td><%= diet.stock.feed.name %></td>
	            <td>
	          <%= link_to diet, class: 'btn btn-sm btn-primary', remote: true do %>
	            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
	          <% end %>
	        </td>
	        <td>
	          <% if diet.active? %>
	            <%= link_to edit_diet_path(diet), class: 'btn btn-sm btn-default', remote: true do %>
	              <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
	            <% end %>
	          <% end %>
	        </td>
	        <td>
	          <%= link_to diet, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger', remote: true do %>    
	            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
	          <% end %>      
	        </td>
	      <% end %>
	    </tbody>
	  </table>
	</div>
	<%= paginate @diets, remote: true %>
	<br>
</div>
