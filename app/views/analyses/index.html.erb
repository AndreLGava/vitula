<% breadcrumb :analyses %>
<div class="page-header">
  <%= link_to new_analysis_path, class: 'btn btn-primary pull-right' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('analyses.new.new') %>
  <% end %>
  <h3><%= Analysis.human_attribute_name(:analyses)%></h3>
</div>
<div>
  <script type="text/javascript">
    Analysis.setup(<%= current_user.analyses_chart %>);
  </script>
    <div class="chart">

    </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th><%= Analysis.human_attribute_name(:property)%></th>
            <th><%= Analysis.human_attribute_name(:codeanalysis)%></th>
            <th><%= Analysis.human_attribute_name(:collect)%></th>
            <th><%= Analysis.human_attribute_name(:fat)%></th>
            <th><%= Analysis.human_attribute_name(:protein)%></th>
            <th><%= Analysis.human_attribute_name(:lactose)%></th>
            <th><%= Analysis.human_attribute_name(:totalsolids)%></th>
            <th><%= Analysis.human_attribute_name(:defattedextract)%></th>
            <th><%= Analysis.human_attribute_name(:css)%></th>
            <th><%= Analysis.human_attribute_name(:scorecss)%></th>
            <th><%= Analysis.human_attribute_name(:ufc)%></th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @analyses) do |analysis| %>
            <td><%= analysis.property.name %></td>
            <td><%= analysis.codeanalysis %></td>
            <td><%= analysis.collect %></td>
            <td><%= number_to_currency(analysis.fat, unit: "%", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.protein, unit: "%", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.lactose, unit: "%", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.totalsolids, unit: "%", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.defattedextract, unit: "%", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.css, unit: "x1000/cm³", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.scorecss, unit: "x1000/cm³", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= number_to_currency(analysis.ufc, unit: "x1000/cm³", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td>
          <%= link_to analysis, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_analysis_path(analysis), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to analysis, method: :delete, data: { confirm: I18n.t('analyses.destroy.delete') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @analyses %>
<br>
