<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <div class="page-header">
    <%= link_to new_employee_path(property_id: @property.id), remote: true, class: 'btn btn-primary pull-right'  do %>
      <span class="fa fa-plus"></span>
      <%= I18n.t('employees.new.new') %>
    <% end %>
    <h3><%= Employee.human_attribute_name(:employees)%></h3>
  </div>
</div>
<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <tr>
            <th><%= Employee.human_attribute_name(:work)%></th>
            <th><%= Employee.human_attribute_name(:name)%></th>
            <th><%= Employee.human_attribute_name(:startwork)%></th>
            <th><%= Employee.human_attribute_name(:endwork)%></th>
            <th><%= Employee.human_attribute_name(:born)%></th>
            <th><%= Employee.human_attribute_name(:phone)%></th>
            <th><%= Employee.human_attribute_name(:rg)%></th>
            <th><%= Employee.human_attribute_name(:cpf)%></th>
            <th><%= Employee.human_attribute_name(:schooling)%></th>
            <th><%= Employee.human_attribute_name(:inss)%></th>
            <th><%= Employee.human_attribute_name(:pis)%></th>
            <th><%= Employee.human_attribute_name(:salary)%></th>
            <th><%= Employee.human_attribute_name(:profession)%></th>
            <th><%= Employee.human_attribute_name(:payment)%></th>
        <td></td>
        <td></td>
      </tr>
      <% @employees.each do |employee| %>
        <tr>
            <td><%= employee.work %></td>
            <td><%= employee.name %></td>
            <td><%= employee.startwork %></td>
            <td><%= employee.endwork %></td>
            <td><%= employee.born %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.rg %></td>
            <td><%= employee.cpf %></td>
            <td><%= employee.schooling %></td>
            <td><%= employee.inss %></td>
            <td><%= employee.pis %></td>
            <td><%= employee.salary %></td>
            <td><%= employee.profession %></td>
            <td><%= employee.payment %></td>
          <td><%= link_to edit_employee_path(employee), remote: true, class: "btn btn-sm btn-default" do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
          </td>
          <td><%= link_to employee,  method: :delete, data: { confirm: I18n.t('employees.destroy.delete') }, remote: true, class: "btn btn-sm btn-danger" do %>
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>
          </td>
          <% end %>
    </table>
    <%= paginate @employees, remote: true %>
  </div>
</div>