<%= simple_form_for(@employee) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :work %>
    <%= f.input :name %>
    <%= f.input :startwork , as: :date_picker %>
    <%= f.input :endwork   , as: :date_picker %>
    <%= f.input :born      , as: :date_picker %>
    <%= f.input :phone %>
    <%= f.input :rg %>
    <%= f.input :cpf %>
    <%= f.input :schooling %>
    <%= f.input :inss %>
    <%= f.input :pis %>
    <%= f.input :salary %>
    <%= f.input :profession %>
    <%= f.input :payment %>
    <%= f.association :property %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
