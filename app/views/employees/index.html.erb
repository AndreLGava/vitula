<% breadcrumb :employees %>
<div class="page-header">
  <%= link_to new_employee_path, class: 'btn btn-primary pull-right' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Employee.human_attribute_name(:employees)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
     <tr>
            <th><%= Employee.human_attribute_name(:work)%></th>
            <th><%= Employee.human_attribute_name(:name)%></th>
            <th><%= Employee.human_attribute_name(:startwork)%></th>
            <th><%= Employee.human_attribute_name(:endwork)%></th>
            <th><%= Employee.human_attribute_name(:born)%></th>
            <th><%= Employee.human_attribute_name(:phone)%></th>
            <th><%= Employee.human_attribute_name(:rg)%></th>
            <th><%= Employee.human_attribute_name(:cpf)%></th>
            <th><%= Employee.human_attribute_name(:schooling)%></th>
            <th><%= Employee.human_attribute_name(:inss)%></th>
            <th><%= Employee.human_attribute_name(:pis)%></th>
            <th><%= Employee.human_attribute_name(:salary)%></th>
            <th><%= Employee.human_attribute_name(:profession)%></th>
            <th><%= Employee.human_attribute_name(:payment)%></th>
        <td></td>
        <td></td>
      </tr>
      <% @employees.each do |employee| %>
        <tr>
            <td><%= employee.work %></td>
            <td><%= employee.name %></td>
            <td><%= employee.startwork %></td>
            <td><%= employee.endwork %></td>
            <td><%= employee.born %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.rg %></td>
            <td><%= employee.cpf %></td>
            <td><%= employee.schooling %></td>
            <td><%= employee.inss %></td>
            <td><%= employee.pis %></td>
            <td><%= employee.salary %></td>
            <td><%= employee.profession %></td>
            <td><%= employee.payment %></td>
            <td>
          <%= link_to employee, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_employee_path(employee), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @employees %>
<br>
