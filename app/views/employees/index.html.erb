<% breadcrumb :employees %>
<div class="page-header">
  <%= link_to new_employee_path, class: 'btn btn-primary pull-right' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Employee.human_attribute_name(:employees)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th>Work</th>
            <th>Name</th>
            <th>Startwork</th>
            <th>Endwork</th>
            <th>Born</th>
            <th>Phone</th>
            <th>Rg</th>
            <th>Cpf</th>
            <th>Schooling</th>
            <th>Inss</th>
            <th>Pis</th>
            <th>Salary</th>
            <th>Profession</th>
            <th>Payment</th>
            <th>Property</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @employees) do |employee| %>
            <td><%= employee.work %></td>
            <td><%= employee.name %></td>
            <td><%= employee.startwork %></td>
            <td><%= employee.endwork %></td>
            <td><%= employee.born %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.rg %></td>
            <td><%= employee.cpf %></td>
            <td><%= employee.schooling %></td>
            <td><%= employee.inss %></td>
            <td><%= employee.pis %></td>
            <td><%= employee.salary %></td>
            <td><%= employee.profession %></td>
            <td><%= employee.payment %></td>
            <td><%= employee.property %></td>
            <td>
          <%= link_to employee, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_employee_path(employee), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to employee, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @employees %>
<br>
