<!DOCTYPE html>
<html>
<head>
  <title>Vitula</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: "navbar-brand" do %>
        <img src="/images/brand/vitula_logo.png" alt="Vitula">
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <% if current_user.has_property? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Animais<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Animais", animals_path %></li>
              <li><%= link_to "Doadores de semen", donors_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Leite<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Produtividade individual", shipments_path %></li>
              <li><%= link_to "Carregamento de leite", shipments_path %></li>
              <li><%= link_to "Análise de leite", analyses_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Alimentação<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Alimento estocado", stocks_path %></li>
              <li><%= link_to "Pastagem", pasteurs_path %></li>
              <li><%= link_to "Alimentos", feeds_path %></li>
              <li><%= link_to "Nutrientes", nil %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Sanidade<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Doenças", diseases_path %></li>
              <li><%= link_to "Medicamentos", drugs_path %></li>
            </ul>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Contábil<span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "Entradas", nil %></li>
              <li><%= link_to "Saídas", nil %></li>
            </ul>
          </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Propriedade<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Propriedade", properties_path %></li>
            <li><%= link_to "Rebanho", lots_path %></li>
            <li><%= link_to "Procedimento", lots_path %></li>
            <li><%= link_to "Serviço", lots_path %></li>
            <li><%= link_to "Empregado", employees_path %></li>
            <li><%= link_to "Silo", bins_path %></li>
          </ul>
        </li>
        <li>
          <%= link_to notifications_path, class: "fa fa-bell fa-menu" do %>
            <% unless @notification_count == 0 %> 
              <span class="badge badge-message badge-danger">
                <%= @notification_count %>
              </span>
            <% end %>
        <% end %>
      </li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle profile" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= image_tag current_user.avatar.url(:thumb), class: "img-circle" %><%= current_user.name %> <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profiles", profiles_path %></li>
            <li role="separator" class="divider"></li>
            <li><%= link_to "Edit settings", edit_user_registration_path %></li>
            <li><%= link_to "Sign Out", destroy_user_session_path %></li>
          </ul>
        </li>
        <% end %>
        <% unless user_signed_in? %>
          <li><%= link_to "Sign Up", new_user_registration_path %></li>
          <li><%= link_to "Sign In", user_session_path %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="container-fluid">
  <% if notice %>
      <script>
        alertify.success("<%= notice %>");
      </script>
  <% end %>
  <% if alert %>
      <script>
        alertify.error("<%= alert %>");
      </script>
  <% end %>

  <%= breadcrumbs style: :bootstrap %>
  
	<%= yield %>

</div>
</body>
</html>
