<%= simple_form_for(@permission) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :profile %>
    <%= f.association :functionality %>
    <%= f.input :criar %>
    <%= f.input :ler %>
    <%= f.input :atualizar %>
    <%= f.input :deletar %>
    <%= f.input :imprimir %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
