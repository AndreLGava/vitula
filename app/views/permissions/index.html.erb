<h3>Listing Permissions</h3>
<%= link_to 'New Permission', new_permission_path, class: "btn btn-info pull-right" %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Profile</th>
      <th>Functionality</th>
      <th>Create</th>
      <th>Read</th>
      <th>Update</th>
      <th>Delete</th>
      <th>Print</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.profile.name %></td>
        <td><%= permission.functionality.name %></td>
        <td><%= permission.criar %></td>
        <td><%= permission.ler %></td>
        <td><%= permission.atualizar %></td>
        <td><%= permission.deletar %></td>
        <td><%= permission.imprimir %></td>
        <td><%= link_to 'Show', permission, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_permission_path(permission), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

