<h3><%= Permission.human_attribute_name(:permission)%></h3>
<%= link_to  new_permission_path, class: "btn btn-info pull-right" do %>
  <i class="fa fa-plus"></i> <%= I18n.t('crud.new') %>
<% end %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th><%= Modulo.human_attribute_name(:profile)%></th>
      <th><%= Modulo.human_attribute_name(:functionality)%></th>
      <th><%= Modulo.human_attribute_name(:criar)%></th>
      <th><%= Modulo.human_attribute_name(:ler)%></th>
      <th><%= Modulo.human_attribute_name(:atualizar)%></th>
      <th><%= Modulo.human_attribute_name(:deletar)%></th>
      <th><%= Modulo.human_attribute_name(:imprimir)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.profile.name %></td>
        <td><%= permission.functionality.name %></td>
        <td><%= permission.criar %></td>
        <td><%= permission.ler %></td>
        <td><%= permission.atualizar %></td>
        <td><%= permission.deletar %></td>
        <td><%= permission.imprimir %></td>
         <td><%= link_to permission, class: "btn btn-sm btn-primary" do %>
          <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
        <% end %>
        </td>
        <td><%= link_to edit_permission_path(permission), class: "btn btn-sm btn-default" do %>
          <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
        <% end %>
        </td>
        <td><%= link_to permission,  method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: "btn btn-sm btn-danger" do %>
          <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

