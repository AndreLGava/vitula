<h3>Listing Permissions</h3>
<%= link_to 'New Permission', new_permission_path, class: "btn btn-info pull-right" %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th>Create</th>
      <th>Read</th>
      <th>Update</th>
      <th>Delete</th>
      <th>Print</th>
      <th>Modulo</th>
      <th>Functionality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permissions.each do |permission| %>
      <tr>
        <td><%= permission.create %></td>
        <td><%= permission.read %></td>
        <td><%= permission.update %></td>
        <td><%= permission.delete %></td>
        <td><%= permission.print %></td>
        <td><%= permission.modulo.name %></td>
        <td><%= permission.functionality.name %></td>
        <td><%= link_to 'Show', permission %></td>
        <td><%= link_to 'Edit', edit_permission_path(permission) %></td>
        <td><%= link_to 'Destroy', permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

