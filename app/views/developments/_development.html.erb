<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
	<div class="page-header">
	  <%= link_to new_development_path(animal_id: @animal.id), remote: true, class: 'btn btn-primary pull-right' do %>
	    <span class="fa fa-plus"></span>
	    <%= I18n.t('developments.new.new') %>
	  <% end %>
	  <h3><%= Development.human_attribute_name(:development)%></h3>
	</div>
</div>
<div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
	<div class="table-responsive">
		<table class="table table-striped table-hover table-condensed">
			<tr>
				<td><%= Development.human_attribute_name(:weight)%></td>
				<td><%= Development.human_attribute_name(:height)%></td>
				<td><%= Development.human_attribute_name(:created_at)%></td>
			</tr>
			<% @developments.each do |d| %>
				<tr>
					<td><%= number_to_currency(d.weight, unit: "Kg", separator: ",", delimiter: ".", format: "%n %u") %></td>
					<td><%= number_to_currency(d.height, unit: "cm", separator: ",", delimiter: ".", format: "%n %u") %></td>
					<td><%= d.created_at %></td>
				</tr>
			<% end %>
		</table>
		<%= paginate @developments, remote: true %>
	</div>
</div>
<div class="col-lg-5 col-md-4 col-sm-12 col-xs-12">
<script type="text/javascript">
	SplineGraph.setup(<%= @animal.development_chart %>);
</script>
	<div class="chart">

	</div>
</div>
