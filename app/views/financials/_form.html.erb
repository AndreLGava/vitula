<%= simple_form_for(@financial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :value, as: :rs %>
    <%= f.input :datetransaction, as: :date_picker, before: Time.now.to_date %>
    <%= f.input :operation, collection: Financial.operations.keys, as: :select, allow_blank: false %>
    <%= f.input :description %>
    <%= f.association :animal, as: :hidden %>
    <%= f.association :service, as: :hidden %>
    <%= f.association :employee, as: :hidden %>
    <%= f.association :reproduction, as: :hidden %>
    <%= f.association :stock, as: :hidden %>
    <%= f.association :treatment, as: :hidden %>
    <%= f.association :schedule, as: :hidden %>
    <%= f.association :service, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
