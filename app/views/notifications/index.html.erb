<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
  <ul class="list-group">
    <% @notifications.each do |notification| %>
    <li class="list-group-item">
      <%= notification.title %> <%= link_to '', notification, class: "fa fa-trash btn btn-danger btn-sm btn-outline btn-round-sm pull-right", method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') } %>
      <%= link_to '', show_notification_path(id: notification), remote: true, class: "fa fa-envelope btn btn-info btn-outline btn-sm pull-right btn-round-sm " %>
      <% unless notification.read.nil? %>
        <%= link_to '', '#', class: "fa fa-check btn btn-success btn-outline btn-sm pull-right btn-round-sm " %>
      <% end %>
    </li>
    <% end %>
  </ul>
</div>
<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <div id="show">

  </div>
</div>
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
  <%= paginate @notifications %>
</div>