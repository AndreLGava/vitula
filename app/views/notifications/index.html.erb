<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
  <ul class="list-group">
    <% @notifications.each do |notification| %>
    <li class="list-group-item"><%= notification.title %> <%= link_to '', notification,class: "fa fa-trash btn btn-danger btn-sm btn-outline btn-round-sm pull-right", method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') } %><%= link_to '', notification, class: "fa fa-envelope btn btn-info btn-outline btn-sm pull-right btn-round-sm " %></li>
    <% end %>
  </ul>
</div>
