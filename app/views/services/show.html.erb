<div class="page-header">
  <%= link_to services_path, class: 'btn btn-default' do %>
    <span class="fa fa-chevron-left"></span>
    <%= I18n.t('crud.back') %>
  <% end %>

  <%= link_to edit_service_path(@service), class: 'btn btn-primary' do %>
    <span class="fa fa-pencil"></span>
    <%= I18n.t('crud.edit') %>
  <% end %>
    <%= link_to new_service_path, class: 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= I18n.t('crud.show') %> <%= Service.human_attribute_name(:service)%></h3>
</div>
<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
  <ul class="list-group">
    <li class="list-group-item">
      <strong><%= Service.human_attribute_name(:provider)%></strong>
      <%= @service.provider %>
    </li>
    <li class="list-group-item">
      <strong><%= Service.human_attribute_name(:goal)%></strong>
      <%= @service.goal %>
    </li>
    <li class="list-group-item">
      <strong><%= Service.human_attribute_name(:property)%></strong>
      <%= @service.property.name %>
    </li>
  </ul>
</div>
<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <%= Financial.human_attribute_name(:financials)%>
    </div>
    <div class="panel-body" id="financials">
      <%= render partial: 'financials/financials', locals: {id: @service.id, financials: @financials} %>
    </div>
  </div>
</div>
