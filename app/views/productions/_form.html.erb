<div class="col-lg-9 col-md-8 col-sm-This is a repository of my posgra6 col-xs-12">
  <%= simple_form_for(@production, remote: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :amount       ,as: :normal, before: "L",:input_html => {value: number_with_precision(f.object.amount, precision: 2) } %>
      <%= f.input :measurement %>
      <%= f.input :observation %>
      <%= f.association :animal, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
<br>
