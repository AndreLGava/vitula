<% breadcrumb :productions %>
<h3><%= Production.human_attribute_name(:productions)%></h3>
  <%= link_to  new_production_path, class: "btn btn-info" do %>
    <i class="fa fa-plus"></i> <%= I18n.t('crud.new') %>
  <% end %>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th><%= Production.human_attribute_name(:animal)%></th>
        <th><%= Production.human_attribute_name(:amount)%></th>
        <th><%= Production.human_attribute_name(:measurement)%></th>
        <th><%= Production.human_attribute_name(:observation)%></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @productions.each do |production| %>
      <tr>
        <td><%= "#{production.animal.code} - #{production.animal.name}" %></td>
        <td><%= production.amount %></td>
        <td><%= production.measurement %></td>
        <td><%= production.observation %></td>
        <td>
          <%= link_to production, class: "btn btn-sm btn-primary" do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_production_path(production), class: "btn btn-sm btn-default" do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
          </td>
        <td>
          <%= link_to production,  method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: "btn btn-sm btn-danger" do %>
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<%= paginate @productions %>
<br>
