<h3>Listing Profiles</h3>
<%= link_to 'New Profile', new_profile_path, class: "btn btn-info pull-right" %>

<table class=" table table-responsive table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.name %></td>
        <td><%= profile.description %></td>
        <td><%= link_to 'Show', profile, class: "btn btn-sm btn-primary" %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile), class: "btn btn-sm btn-default" %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

