<% breadcrumb :bins %>
<div class="page-header">
  <%= link_to new_bin_path, class: 'btn btn-primary pull-right' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Bin.human_attribute_name(:bins)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th><%=Bin.human_attribute_name(:capacity)%></th>
            <th><%=Bin.human_attribute_name(:property)%></th>
            <th><%=Bin.human_attribute_name(:kind)%></th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @bins) do |bin| %>
            <td><%= number_to_currency(bin.capacity, unit: "MÂ³", separator: ",", delimiter: ".", format: "%n %u") %></td>
            <td><%= bin.property.name %></td>
            <td><%= bin.kind %></td>
            <td>
          <%= link_to bin, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_bin_path(bin), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to bin, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @bins %>
<br>
