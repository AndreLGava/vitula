<%= simple_form_for(@donor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :code %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.input :description %>
    <%= f.input :female, as: :hidden, input_html: { value: false } %>
    <%= f.input :donor, as: :hidden, input_html: { value: true } %>
    <%= f.input :breed, collection: Animal.breeds.keys, as: :select, allow_blank: true %>
    <%= f.input :user_id, :as => :hidden, :input_html => { :value => current_user.id } %>
    <%= f.input :discard, as: :date_picker, :include_blank => true  %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<br>

