<% breadcrumb :donors %>
  <div class="page-header">
    <%= link_to new_donor_path, class: 'btn btn-primary pull-right' do %>
      <span class="fa fa-plus"></span>
      <%= I18n.t('animals.new.new') %>
    <% end %>
    <h3><%= Animal.human_attribute_name(:donors)%></h3>
  </div>
<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
        <th><%= Animal.human_attribute_name(:photo)%></th>
        <th><%= Animal.human_attribute_name(:code)%></th>
        <th><%= Animal.human_attribute_name(:name)%></th>
        <th><%= Animal.human_attribute_name(:description)%></th>
        <th><%= Animal.human_attribute_name(:breed)%></th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @donors.each do |animal| %>
        <tr>
          <td><%= image_tag animal.photo.url(:thumb), class: "img-circle" %></td>
          <td><%= animal.code %></td>
          <td><%= animal.name %></td>
          <td><%= animal.description %></td>
          <td><%= animal.breed %></td>
          <td><%= link_to donor_path(animal), class: "btn btn-sm btn-primary" do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
          <td><%= link_to edit_donor_path(animal), class: "btn btn-sm btn-default" do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
