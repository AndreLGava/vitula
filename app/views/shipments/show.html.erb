<div class="page-header">
  <%= link_to shipments_path, class: 'btn btn-default' do %>
    <span class="fa fa-chevron-left"></span>
    <%= I18n.t('crud.back') %>
  <% end %>
  <%= link_to edit_shipment_path(@shipment), class: 'btn btn-primary' do %>
    <span class="fa fa-pencil"></span>
    <%= I18n.t('crud.edit') %>
  <% end %>
  <%= link_to new_shipment_path, class: 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('shipments.new.new') %>
  <% end %>
  <h3><%= I18n.t('crud.show') %> <%= Shipment.human_attribute_name(:shipment)%></h3>
</div>
<div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
  <ul class="list-group">
    <li class="list-group-item">
      <strong><%= Shipment.human_attribute_name(:amount)%></strong>
      <%= number_to_currency(@shipment.amount, unit: "L", separator: ",", delimiter: ".", format: "%n %u") %>
    </li>
    <li class="list-group-item">
      <strong><%= Shipment.human_attribute_name(:date)%></strong>
      <%= @shipment.date %>
    </li>
  </ul>
</div>
