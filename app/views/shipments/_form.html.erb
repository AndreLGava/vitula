<%= simple_form_for(@shipment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount, as: :normal, before: "L" %>
    <%= f.input :date, as: :date_picker %>
    <%= f.association :property %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
