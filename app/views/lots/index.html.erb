<% breadcrumb :lots %>
<h3><%= Lot.human_attribute_name(:lot)%></h3>
<%= link_to  new_lot_path, class: "btn btn-info pull-right" do %>
  <i class="fa fa-plus"></i> <%= I18n.t('crud.new') %>
<% end %>

<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th><%= Lot.human_attribute_name(:name)%></th>
      <th><%= Lot.human_attribute_name(:description)%></th>
      <th><%= Lot.human_attribute_name(:property)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.name %></td>
        <td><%= lot.description %></td>
        <td><%= lot.property.name %></td>
        <td><%= link_to lot, class: "btn btn-sm btn-primary" do %>
          <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
        <% end %>
        </td>
        <td><%= link_to edit_lot_path(lot), class: "btn btn-sm btn-default" do %>
          <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
        <% end %>
        </td>
        <td><%= link_to lot,  method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: "btn btn-sm btn-danger" do %>
          <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @lots %>
<br>
