<%= simple_form_for(@reproduction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :mother,  @reproduction.mother.name, :include_blank => false, disabled: true %>
    <%= f.association :father, :collection => @father, :label_method => :name, :value_method => :id %>
    <%= f.input :heat, as: :date_picker, :include_blank => false %>
    <%= f.input :insemination, as: :date_picker, :include_blank => true %>
    <%= f.input :regress, as: :date_picker, :include_blank => true %>
    <%= f.input :abortion, as: :date_picker, :include_blank => true %>
    <%=  f.input :stop_breastfeeding, as: :date_picker, :include_blank => true %>
    <%= f.input :parturition, as: :date_picker, :include_blank => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<br>
