<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <%= simple_form_for(@reproduction, remote: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :mother, as: :hidden %>
      <%= f.association :father, :collection => @father, :label_method => :name, :value_method => :id, include_blank: false %>
      <%= f.input :heat, as: :date_picker, :include_blank => false, disabled: @reproduction.heat? %>
      <%= f.input :insemination, as: :date_picker, :include_blank => true, disabled: @reproduction.insemination? %>
      <%= f.input :regress, as: :date_picker, :include_blank => true, disabled: @reproduction.regress? %>
      <%= f.input :abortion, as: :date_picker, :include_blank => true, disabled: @reproduction.abortion? %>
      <%= f.input :stop_breastfeeding, as: :date_picker, :include_blank => true, disabled: @reproduction.stop_breastfeeding? %>
      <%= f.input :parturition, as: :date_picker, :include_blank => true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
<br>
