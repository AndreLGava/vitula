<%= simple_form_for(@reproduction) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :mother, :collection => @mother, :label_method => :name, :value_method => :id %>
    <%= f.association :father, :collection => @father, :label_method => :name, :value_method => :id %>
    <%= f.input :heat, :include_blank => false %>
    <%= f.input :insemination, :include_blank => true %>
    <%= f.input :regress, :include_blank => true %>
    <%= f.input :abortion, :include_blank => true %>
    <%=  f.input :stop_breastfeeding, :include_blank => true %>
    <%= f.input :parturition, :include_blank => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<br>
