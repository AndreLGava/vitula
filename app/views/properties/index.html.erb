<% breadcrumb :properties %>
  <div class="page-header">
    <%= link_to  new_property_path, class: 'btn btn-primary pull-right' do %>
      <span class="fa fa-plus"></span>
      <%= I18n.t('properties.new.new') %>
    <% end %>
    <h3><%= Property.human_attribute_name(:properties)%></h3>
  </div>
<table class="table table-responsive table-striped">
  <thead>
    <tr>
      <th><%= Property.human_attribute_name(:name) %></th>
      <th><%= Property.human_attribute_name(:description) %></th>
      <th><%= Property.human_attribute_name(:area) %></th>
      <th><%= Property.human_attribute_name(:manager) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.description %></td>
        <td><%= property.area %></td>
        <td><%= property.manager %></td>
        <td><%= link_to property, class: "btn btn-sm btn-primary" do %>
          <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
        <% end %>
        </td>
        <td><%= link_to edit_property_path(property), class: "btn btn-sm btn-default" do %>
          <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
        <% end %>
        </td>
        <td><%= link_to property,  method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: "btn btn-sm btn-danger" do %>
          <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @properties %>
<br>
