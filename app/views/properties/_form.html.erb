<%= simple_form_for(@property) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :long %>
    <%= f.input :lat %>
    <%= f.input :area, as: :normal, before: "Ha", :input_html => {value: number_with_precision(f.object.area, precision: 2) } %>
    <%= f.input :altitude, as: :normal, before: "M"%>
    <%= f.input :precipitation, as: :normal, before: "mm" %>
    <%= f.input :enrolement_of_sanity %>
    <%= f.input :nirf %>
    <%= f.input :incra %>
    <%= f.input :state_registration %>
    <%= f.input :manager %>
    <%= f.input :user_id, as: :hidden, :input_html => { :value => current_user.id } %>
    <%# f.input :user_id, input_html: {value: f.object.user_id || current_user.id} %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
<% end %>
<br>
