<%= simple_form_for @module do |f| %>
  <div class="form-group">
    <%= f.label :code %>
    <%= f.input :code, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.input :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.input :description, class: "form-control" %>
  </div>
  <%= f.button :submit, class: "btn btn-primary" %>
<% end %>
<%= link_to "Back", :back %>
