<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <div class="page-header">
    <%= link_to new_glebe_path(property_id: @property.id), remote: true, class: 'btn btn-primary pull-right'  do %>
      <span class="fa fa-plus"></span>
      <%= I18n.t('glebes.new.new') %>
    <% end %>
    <h3><%= Glebe.human_attribute_name(:Glebes)%></h3>
  </div>
</div>
<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <tr>
        <td><%= Glebe.human_attribute_name(:name)%></td>
        <td><%= Glebe.human_attribute_name(:purpose)%></td>
        <td><%= Glebe.human_attribute_name(:area)%></td>
        <td></td>
        <td></td>
      </tr>
      <% @glebes.each do |g| %>
        <tr>
          <td><%= g.name %></td>
          <td><%= g.purpose %></td>
          <td><%= g.area %></td>
          <td><%= link_to edit_glebe_path(g), remote: true, class: "btn btn-sm btn-default" do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
          </td>
          <td><%= link_to g,  method: :delete, data: { confirm: I18n.t('glebes.destroy.delete') }, remote: true, class: "btn btn-sm btn-danger" do %>
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>
          </td>
          <% end %>
    </table>
    <%= paginate @glebes, remote: true %>
  </div>
</div>