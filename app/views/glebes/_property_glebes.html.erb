<div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
    <%= link_to  I18n.t('glebes.new.new'), new_glebe_path(property_id: @property.id), remote: true, class: 'btn btn-info' %>
</div>
<div class="col-lg-9 col-md-8 col-sm-12 col-xs-12">
  <div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
      <tr>
        <td><%= Glebe.human_attribute_name(:name)%></td>
        <td><%= Glebe.human_attribute_name(:purpose)%></td>
        <td><%= Glebe.human_attribute_name(:area)%></td>
        <td></td>
        <td></td>
      </tr>
      <% @glebes.each do |g| %>
        <tr>
          <td><%= g.name %></td>
          <td><%= g.purpose %></td>
          <td><%= g.area %></td>
          <td><%= link_to 'Edit', edit_glebe_path(glebe), remote: true %></td>
          <td><%= link_to 'Destroy', glebe, method: :delete, data: { confirm: I18n.t('glebes.destroy.delete') } %></td>
        </tr>
        <% end %>
    </table>
    <%= paginate @glebes, remote: true %>
  </div>
</div>