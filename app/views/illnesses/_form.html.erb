<%= form_for(@illness, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @illness.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@illness.errors.count, "error") %> prohibited this illness from being saved:</h4>

      <ul>
      <% @illness.errors.full_messages.each do |msg| %>
