  </div>
  <div class="form-group">
    <%= f.label :EndDate, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_select :EndDate, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :sequel, class: "col-sm-2 control-label" %>
