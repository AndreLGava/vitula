  </div>
  <div class="form-group">
    <%= f.label :animal, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :animal, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :disease, class: "col-sm-2 control-label" %>
