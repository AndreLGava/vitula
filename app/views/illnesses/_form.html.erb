<%= simple_form_for(@illness) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :startdate, as: :date_picker %>
    <%= f.input :enddate, as: :date_picker %>
    <%= f.input :sequel %>
    <%= f.association :animal %>
    <%= f.association :disease %>
    <%= f.association :treatment %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
