<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
  <%= simple_form_for(@illness, remote: true) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.association :disease, :label_method => :vulgarname, :value_method => :id, include_blank: false %>
      <%= f.input :startdate, as: :date_picker %>
      <%= f.input :enddate, as: :date_picker %>
      <%= f.input :sequel %>
      <%= f.association :animal, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
<br>

