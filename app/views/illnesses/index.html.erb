<% breadcrumb :illnesses %>
<div class="page-header">
  <%= link_to new_illness_path, class: 'btn btn-primary' do %>
    <span class="fa fa-plus"></span>
    <%= I18n.t('crud.new') %>
  <% end %>
  <h3><%= Illness.human_attribute_name(:illnesses)%></h3>
</div>

<div class="table-responsive">
  <table class="table table-striped table-hover table-condensed">
    <thead>
      <tr>
            <th>Startdate</th>
            <th>Enddate</th>
            <th>Sequel</th>
            <th>Animal</th>
            <th>Disease</th>
            <th>Treatment</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @illnesses) do |illness| %>
            <td><%= illness.startdate %></td>
            <td><%= illness.enddate %></td>
            <td><%= illness.sequel %></td>
            <td><%= illness.animal %></td>
            <td><%= illness.disease %></td>
            <td><%= illness.treatment %></td>
            <td>
          <%= link_to illness, class: 'btn btn-sm btn-primary' do %>
            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_illness_path(illness), class: 'btn btn-sm btn-default' do %>
            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
          <% end %>
        </td>
        <td>
          <%= link_to illness, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, class: 'btn btn-sm btn-danger' do %>    
            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
          <% end %>      
        </td>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @illnesses %>
<br>
