<div class="col-lg-9 col-md-8 col-sm-6 col-xs-12">
	<div class="page-header">
	  <%= link_to new_illness_path(animal_id: @animal.id), remote: true, class: 'btn btn-primary pull-right' do %>
	    <span class="fa fa-plus"></span>
	    <%= I18n.t('illnesses.new.new') %>
	  <% end %>
	  <h3><%= Illness.human_attribute_name(:illnesses)%></h3>
	</div>

	<div class="table-responsive">
	  <table class="table table-striped table-hover table-condensed">
	    <thead>
	      <tr>
	            <th><%= Illness.human_attribute_name(:startdate)%></th>
	            <th><%= Illness.human_attribute_name(:enddate)%></th>
	            <th><%= Illness.human_attribute_name(:sequel)%></th>
	            <th><%= Illness.human_attribute_name(:animal)%></th>
	            <th><%= Illness.human_attribute_name(:disease)%></th>
	            <th><%= Illness.human_attribute_name(:treatment)%></th>
	            <th></th>
	        <th></th>
	        <th></th>
	      </tr>
	    </thead>

	    <tbody>
	      <%= content_tag_for(:tr, @illnesses) do |illness| %>
	            <td><%= illness.startdate %></td>
	            <td><%= illness.enddate %></td>
	            <td><%= illness.sequel %></td>
	            <td><%= illness.animal %></td>
	            <td><%= illness.disease %></td>
	            <td><%= illness.treatment %></td>
	            <td>
	          <%= link_to illness, remote: true, class: 'btn btn-sm btn-primary' do %>
	            <i class="fa fa-eye"></i> <%= I18n.t('crud.show') %>
	          <% end %>
	        </td>
	        <td>
	          <%= link_to edit_illness_path(illness), remote: true, class: 'btn btn-sm btn-default' do %>
	            <i class="fa fa-pencil"></i> <%= I18n.t('crud.edit') %>
	          <% end %>
	        </td>
	        <td>
	          <%= link_to illness, method: :delete, data: { confirm: I18n.t('crud.destroy_confirmation') }, remote: true, class: 'btn btn-sm btn-danger' do %>    
	            <i class="fa fa-trash"></i> <%= I18n.t('crud.delete') %>
	          <% end %>      
	        </td>
	      <% end %>
	    </tbody>
	  </table>
	</div>
	<%= paginate @illnesses, remote: true %>
	<br>
</div>
