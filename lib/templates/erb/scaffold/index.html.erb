<h3>Listing <%= plural_table_name %></h3>
 
<%%= link_to new_<%= singular_table_name %>_path, class: "btn btn-info pull-right" do %>
  <i class="fa fa-plus"></i> New <%= human_name %>
<% end %>


<table class="table table-responsive table-striped">
 <tr>
 <% attributes.each do |attribute| -%>
 <th><%= attribute.human_name %></th>
 <% end -%>
 <th></th>
 <th></th>
 <th></th>
 </tr>
 
<%%= content_tag_for(:tr, @<%= plural_table_name %>) do |<%= singular_table_name %>| %>
 <% attributes.each do |attribute| -%>
 <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
 <% end -%>
  <td><%%= link_to  <%= singular_table_name %>, class: "btn btn-sm btn-primary" do %>
    <i class="fa fa-eye"></i> Show
  <% end %>
  </td>
  <td><%%= link_to edit_<%= singular_table_name %>_path( <%= singular_table_name %>), class: "btn btn-sm btn-default" do %>
    <i class="fa fa-pencil"></i> Edit
  <% end %>
  </td>
  <td><%%= link_to  <%= singular_table_name %>,  <%= key_value :confirm, "'Are you sure?'" %>, <%= key_value :method, ":delete" %>, class: "btn btn-sm btn-danger" do %>
    <i class="fa fa-trash"></i> Destroy
  <% end %>
  </td>
 <%% end %>
 </table>
<br>
